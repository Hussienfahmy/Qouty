<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="@string/app_name"
    app:startDestination="@id/quotes">

    <fragment
        android:id="@+id/quotes"
        android:name="com.hussien.qouty.ui.quotes.QuotesFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_qoutes">
        <action
            android:id="@+id/action_quotes_to_menu_setting"
            app:destination="@id/menu_setting" />
    </fragment>
    <include app:graph="@navigation/aboutlibs_navigation" />
    <fragment
        android:id="@+id/menu_setting"
        android:name="com.hussien.qouty.ui.settings.SettingsFragment"
        android:label="Setting" />
    <action
        android:id="@+id/action_global_about_libraries"
        app:destination="@id/about_libraries" />
</navigation>