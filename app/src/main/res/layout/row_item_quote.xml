<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_7sdp"
    android:padding="@dimen/_5sdp"
    android:background="@color/true_color"
    android:elevation="4dp"
    android:outlineSpotShadowColor="@color/blue"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/tag_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/textViewOptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="20dp" />

    <TextView
        android:id="@+id/textViewOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        android:text="@string/three_dots"
        android:textAppearance="?android:textAppearanceLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        layout="@layout/quote_layout"
        android:id="@+id/quote_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOptions" />

    <ImageView
        android:id="@+id/image_text_share"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:contentDescription="@string/share_the_quote"
        android:focusable="true"
        android:layout_marginStart="@dimen/_5sdp"

        android:src="@drawable/ic_baseline_share_24"
        app:layout_constraintStart_toEndOf="@+id/image_image_share"
        app:layout_constraintTop_toBottomOf="@+id/quote_layout" />

    <ImageView
        android:id="@+id/image_love"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:clickable="true"
        android:contentDescription="@string/favourite_the_quote"
        android:focusable="true"
        android:src="@drawable/ic_heart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quote_layout"
        tools:tint="@color/red" />

    <ImageView
        android:id="@+id/image_copy"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:contentDescription="@string/share_the_quote"
        android:focusable="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:src="@drawable/ic_baseline_copy_24"
        app:layout_constraintStart_toEndOf="@+id/image_text_share"
        app:layout_constraintTop_toBottomOf="@+id/quote_layout" />

    <ImageView
        android:id="@+id/image_image_share"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:contentDescription="@string/share_the_quote"
        android:focusable="true"
        android:src="@drawable/ic_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quote_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>